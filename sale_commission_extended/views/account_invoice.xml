<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="invoice_line_agent_inherit_tree" model="ir.ui.view">
        <field name="name">invoice.line.agent.inherit.tree</field>
        <field name="model">account.invoice.line.agent</field>
        <field name="inherit_id" ref="sale_commission.invoice_line_agent_tree"/>
        <field name="arch" type="xml">
            <field name="amount" position="attributes">
                <attribute name="sum">Total</attribute>
            </field>
        </field>
    </record>

    <record id="invoice_inherit_form" model="ir.ui.view">
        <field name="name">invoice.inherit.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="agent_id" domain="[('agent', '!=', False)]"/>
                <field name="computation"/>
            </field>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="before">
                <field name="categ_id" required="1"/>
            </xpath>
        </field>
    </record>

</odoo>
