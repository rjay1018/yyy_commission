<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_agent" model="ir.ui.view">
        <field name="name">res.partner.form.agent</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="after">
                <field name="commission_type" invisible="1"/>
                <page string="Sales Commission" attrs="{'invisible': [('agent', '!=', False)]}">
                    <separator string="Partner Category"/>
                    <field name="partner_categ_comm_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="agent_id" domain="[('agent', '!=', False)]"/>
                            <field name="commission_id" domain="[('commission_type', '!=', 'fix')]"/>
                        </tree>
                    </field>
                    <separator string="Product Category"/>
                    <field name="product_categ_comm_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="categ_id" domain="[('has_commission', '!=', False)]"/>
                            <field name="agent_id" domain="[('agent', '!=', False)]"/>
                            <field name="commission_id" domain="[('commission_type', '=', 'fix')]"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="partner_form_agent_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.agent.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="sale_commission.view_partner_form_agent" />
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='agent_information']" position="inside">
                <field name="commission_type" invisible="1"/>
                <notebook>
                    <page string="Sales Commissions">
                        <separator string="Partner Category"/>
                        <field name="agent_partner_categ_ids" nolabel="1"
                            context="{'partner_categ': 1, 'comm_type': commission_type, 'comm_id': commission}">
                            <tree editable="top">
                                <field name="partner_id" required="1"/>
                                <field name="commission_id" domain="[('commission_type', '!=', 'fix')]"/>
                            </tree>
                        </field>
                        <separator string="Product Category"/>
                        <field name="agent_product_categ_ids" nolabel="1"
                            context="{'product_categ': 1, 'comm_type': commission_type, 'comm_id': commission}">
                            <tree editable="top">
                                <field name="partner_id" required="1"/>
                                <field name="categ_id"/>
                                <field name="commission_id" domain="[('commission_type', '=', 'fix')]"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Settlements">
                        <field name="settlements" nolabel="1">
                            <tree colors="red: state == 'cancel'; gray: state == 'invoiced'">
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="total" sum="Settled total" />
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
            <xpath expr="//page[@name='agent_information']/group/group[3]" position="replace"/>
        </field>
    </record>

</odoo>
